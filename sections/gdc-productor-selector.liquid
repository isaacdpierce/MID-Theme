{%- assign ss = section.settings -%}

<section class="gdc-product-selector__wrapper section--{{ section.id }}">
  <div class="gdc-product-selector section--{{ section.id }}">
    <div class="gdc-product-selector__title-row">
      <h2>{{ ss.title }}</h2>
      <a href="{{ ss.btn_url }}">{{ ss.btn_text }}</a>
    </div>
    
    <div class="gdc-product-selector__row">
      {% for block in section.blocks %}
        {% if block.type == 'featured_product' %}
          <div class="gdc-product-selector__card">
            <a 
            href="{{ block.settings.product_item.url }}">
            <div class="gdc-product-selector__image">
              {% render 'gdc-image' image: block.settings.product_item.featured_image %}
            </div>
            
            <h4>
              {{ block.settings.product_item.title }}
            </h4>
          </a>
        </div>

        <style>
          .gdc-product-selector__card {
            flex-direction: column;
            margin: 20px 10px;
            color: {{ ss.text_color }};
            width: calc({{ ss.section_width }}vw / {{ ss.column_count }} - 20px);
            text-align: {{ ss.text_align }};
          }

          .gdc-product-selector__card h4 {
            color: {{ ss.text_color }};
            margin-bottom: 0;
          }
        </style>
      {% endif %}
    {% endfor %}
  </div>
</div>

</section>



{% schema %}
  {
    "name": "GDC: Product Selector", 
    "settings": [
      {
        "type": "header",
        "content": "Section Settings" 
      },
      {
        "type": "range",
        "id": "section_width",
        "label": "Section Width",
        "default": 100,
        "min": 50,
        "max": 100,
        "step": 1,
        "unit": "%"
      },
      {
        "type": "range",
        "id": "t_margin",
        "label": "Section Top margin",
        "default": 0,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px" 
      },
      {
        "type": "range",
        "id": "b_margin",
        "label": "Section Bottom margin",
        "default": 0,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "t_padding",
        "label": "Section Top padding",
        "default": 0,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px" 
      },
      {
        "type": "range",
        "id": "b_padding",
        "label": "Section Bottom padding",
        "default": 0,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#ededed"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#111"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#111"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text",
        "default": "View All"
      },
      {
        "type": "url",
        "id": "item_url",
        "label": "Button Link"
      },
      {
        "type": "header",
        "content": "Product Settings" 
      },
      {
        "type": "range",
        "id": "column_count",
        "label": "Products per row",
        "default": 5,
        "min": 1,
        "max": 10,
        "step": 1
      },
      {
        "type": "range",
        "id": "border_radius",
        "label": "Image Rounded corners",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 1
      },
      {
        "type": "select",
        "id": "text_align",
        "label": "Text alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
      {
        "type": "select",
        "id": "image_shape",
        "label": "Image Shape",
        "options": [
          {
            "value": "square",
            "label": "Square"
          },
          {
            "value": "rectangle",
            "label": "Rectangle"
          },
          {
            "value": "round",
            "label": "Round"
          }
        ],
        "default": "rectangle"
      }
    ],
    "blocks": [
      {
        "type": "featured_product",
        "name": "Featured product",
        "settings": [
          {
            "type": "product",
            "id": "product_item",
            "label": "Product Item"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "GDC: Product Selector",
        "category": "GDC Custom Components"
      }
    ]
  }
{% endschema %}