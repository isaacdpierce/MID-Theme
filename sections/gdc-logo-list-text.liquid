{%- liquid
  
  assign ss = section.settings
  
-%}


<section class="gdc-logo-list-text__wrapper section--{{ section.id }} ">

  <div class="gdc-logo-list-text__image">
    {% render 'gdc-image' image: ss.image %}
  </div>

  <div class="gdc-logo-list-text">

      {% render 'gdc-section-paragraph', section: section %}

      <div class="gdc-centered-row">
        <a class="button gdc-logo-list__btn" 
           href="{{ ss.btn_url }}"
           style="background: {{ ss.btn_color }}; color: {{ ss.btn_text_color }}; box-shadow: none;">
         {{ ss.btn_text }}
        </a>
      </div>
  </div>

  <div class="gdc-logo-list__wrapper">
    {% render 'gdc-block-logo-list' section: section %}
  </div>

</section>

<style>
  .gdc-logo-list-text__wrapper.section--{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin-top: {{ ss.t_margin }}px;
    margin-bottom: {{ ss.b_margin }}px;
    padding-top: {{ ss.t_padding }}px;
    padding-bottom: {{ ss.b_padding }}px;
  }


  .gdc-logo-list-text__image {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100vw;
    height: auto;
  }

  .gdc-logo-list-text__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gdc-logo-list__wrapper {
    width: 90vw;
  }

</style>

