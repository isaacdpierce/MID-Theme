<div class="gdc-section__paragraph-section section--{{ section.id }} {{ hide_mobile }} {{ hide_tablets }}">
  <div class="gdc-section__paragraph section--{{ section.id }}">
    {% if title %}
      <h2>{{ title }}</h2>
    {% endif %}
    {% if text %}
      {{ text }}
    {% endif %}
  </div>
</div>

<style>
  .gdc-section__paragraph-section.section--{{ section.id }} {
    margin-top: {{ section.settings.t_margin }}px;
    margin-bottom: {{ section.settings.b_margin }}px;
    padding-top: {{ section.settings.t_padding }}px;
    padding-bottom: {{ section.settings.b_padding }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .gdc-section__paragraph.section--{{ section.id }} h2 {
    color: {{ section.settings.font_color }};
    text-align: {{ section.settings.title_align }};
  }

  .gdc-section__paragraph.section--{{ section.id }} p {
    color: {{ section.settings.font_color }};
    text-align: {{ section.settings.text_align }};
  }
</style>
