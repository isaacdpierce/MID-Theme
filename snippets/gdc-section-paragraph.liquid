<div class="gdc-section__paragraph-section section--{{ section.id }}">
  <div class="gdc-section__paragraph gdc-text__full-width section--{{ section.id }}">
    {% if title %}
      <h2>{{ title }}</h2>
    {% endif %}
    {% if subtitle %}
      <h5>{{ subtitle }}</h5>
    {% endif %}
    {% if text %}
      {{ text }}
    {% endif %}
  </div>
</div>

<style>
  .gdc-section__paragraph.section--{{ section.id }} h5,
  .gdc-section__paragraph.section--{{ section.id }} h2 {
    color: {{ section.settings.font_color }};
    text-align: {{ section.settings.title_align }};
    margin: 0;
    margin-bottom: 5px;
  }

  .gdc-section__paragraph.section--{{ section.id }} h2 {
    position: relative;
    font-size: {{ section.settings.title_size }}px;
  }

  .gdc-section__paragraph.section--{{ section.id }} h5 {
    font-size: {{ section.settings.subtitle_size }}px;
  }

  .gdc-section__paragraph.section--{{ section.id }} p {
    color: {{ section.settings.font_color }};
    text-align: {{ section.settings.text_align }};
  }

  .gdc-section__paragraph.section--{{ section.id }} p {
    font-size: {{ section.settings.text_size }}px;
  }
</style>
